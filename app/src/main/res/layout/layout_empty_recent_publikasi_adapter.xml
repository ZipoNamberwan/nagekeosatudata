<androidx.cardview.widget.CardView android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_publikasi2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/cover_publikasi2"
                android:layout_marginBottom="10dp"
                android:background="@color/md_grey_300"
                android:textColor="@color/material_drawer_primary_text"
                android:contentDescription="@string/app_name"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:id="@+id/tanggal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@+id/cover_publikasi2"
                android:background="@color/md_grey_300"
                android:textColor="@color/material_drawer_primary_text"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_grey_300"
                android:textColor="@color/material_drawer_primary_text"
                android:id="@+id/judul2"
                android:layout_marginHorizontal="5dp"
                android:lineSpacingExtra="@dimen/linespaceextra"
                android:textStyle="bold"
                android:lines="5"
                android:ellipsize="end"
                android:layout_below="@+id/tanggal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_group"
            android:layout_below="@+id/about_publikasi2"
            android:gravity="center"
            android:background="@color/md_grey_100"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <ImageButton
                android:layout_width="@dimen/small_image_button_util"
                android:layout_height="@dimen/small_image_button_util"
                android:id="@+id/download_button2"
                style="?android:attr/buttonBarButtonStyle"
                android:contentDescription="@string/app_name"/>
            <ImageButton
                android:layout_width="@dimen/small_image_button_util"
                android:layout_height="@dimen/small_image_button_util"
                android:id="@+id/bookmark_button2"
                style="?android:attr/buttonBarButtonStyle"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"/>
            <ImageButton
                android:layout_width="@dimen/small_image_button_util"
                android:layout_height="@dimen/small_image_button_util"
                android:id="@+id/share_button2"
                style="?android:attr/buttonBarButtonStyle"
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>