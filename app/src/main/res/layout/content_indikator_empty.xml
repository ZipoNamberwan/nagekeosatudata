<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/grafik_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/control">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/series_label_empty"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_centerVertical="true"
                    android:background="@color/md_grey_300"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/save_grafik_button_empty"
                    android:layout_toLeftOf="@+id/more_grafik_button_empty"
                    android:layout_toStartOf="@+id/more_grafik_button_empty"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:background="@color/md_grey_300"
                    android:layout_centerVertical="true"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/more_grafik_button_empty"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:background="@color/md_grey_300"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/more_grafik_button_empty2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/baseline_more_vert_24"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/judul_grafik_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/control"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="@dimen/linespaceextra"
                android:lines="3"
                android:ellipsize="end"
                android:textColor="@color/material_drawer_primary_text"
                android:textStyle="bold"
                android:background="@color/md_grey_300"/>

            <View
                android:id="@+id/chart_empty"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/judul_grafik_empty" />

            <RelativeLayout
                android:id="@+id/button_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chart_empty"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/spinner_vervar_empty"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_grey_300"
                    android:spinnerMode="dialog"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/accent"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/spinnerStyle"
                    android:id="@+id/spinner_turvar_grafik_empty"
                    android:layout_below="@+id/spinner_vervar_empty"
                    android:spinnerMode="dialog"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:background="@color/md_grey_300"/>
            </RelativeLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button_group"
                android:layout_marginBottom="10dp"
                android:background="@color/md_grey_300" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>