<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view_chat"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/judul"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/md_grey_300"
                        android:textColor="@color/material_drawer_primary_text"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:id="@+id/nilai"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/material_drawer_primary_text"
                            android:background="@color/md_grey_300"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="5dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/satuan"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="2dp"
                            android:background="@color/md_grey_300"
                            android:lineSpacingExtra="2dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/button_group"
                        android:background="@color/md_grey_100"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sumber"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:padding="2dp"
                            android:textStyle="italic"
                            android:background="@color/md_grey_300"
                            android:lineSpacingExtra="7sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view2"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/judul2"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/md_grey_300"
                        android:textColor="@color/material_drawer_primary_text"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:id="@+id/nilai2"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/material_drawer_primary_text"
                            android:background="@color/md_grey_300"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="5dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/satuan2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="2dp"
                            android:background="@color/md_grey_300"
                            android:lineSpacingExtra="2dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/button_group2"
                        android:background="@color/md_grey_100"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="end">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sumber2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:padding="2dp"
                            android:textStyle="italic"
                            android:background="@color/md_grey_300"
                            android:lineSpacingExtra="7sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>

</RelativeLayout>