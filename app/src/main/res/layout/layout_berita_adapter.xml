<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:padding="2dp">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_chat"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000"
            android:padding="5dp">
            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/foto_berita"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jenis_berita"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/foto_berita"
                    android:layout_toRightOf="@id/foto_berita"
                    android:layout_below="@+id/tanggal_berita"
                    android:textColor="@color/material_drawer_secondary_text"
                    android:inputType="text|textCapWords"
                    android:lines="1"
                    android:ellipsize="end"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggal_berita"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_toEndOf="@+id/foto_berita"
                    android:layout_toRightOf="@+id/foto_berita"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/judul_berita"
                    android:lineSpacingExtra="@dimen/linespaceextra"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/md_black_1000"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/foto_berita"
                    android:layout_toRightOf="@+id/foto_berita"
                    android:layout_below="@+id/jenis_berita"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/button_group"
                    android:layout_below="@+id/judul_berita"
                    android:layout_toRightOf="@+id/foto_berita"
                    android:layout_toEndOf="@+id/foto_berita"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/image_button_util"
                        android:layout_height="@dimen/image_button_util"
                        android:id="@+id/share_button"
                        style="?android:attr/buttonBarButtonStyle"/>
                    <ImageButton
                        android:layout_width="@dimen/image_button_util"
                        android:layout_height="@dimen/image_button_util"
                        android:id="@+id/bookmark_button"
                        android:visibility="gone"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_toEndOf="@+id/share_button"
                        android:layout_toRightOf="@+id/share_button"/>
                    <ImageButton
                        android:layout_width="@dimen/image_button_util"
                        android:layout_height="40dp"
                        android:id="@+id/desc_button"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:lineSpacingExtra="@dimen/linespaceextra"
                android:id="@+id/rincian_berita"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:ellipsize="end"
                android:layout_below="@+id/main_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
